<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crear Usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <style>
    body{
      background: #bdc3c7;  /* fallback for old browsers */
    }

    .login h1 {
      text-align: center;
      color: black;
      font-size: 24px;
      padding: 20px 0 20px 0;
      border-bottom: 3px solid #000000;
    }
    .login form label {
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 50px;
      height: 50px;
      background-color: #3274d6;
      color: white;
    }
    .login ::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
      color: black;
      opacity: 1; /* Firefox */
    }
    .login form input[type="password"], .login form input[type="email"], .login form input[type="username"], .login form input[type="date"] {
      width: 100%;
      height: 50px;
      background: none;
      border: 1px solid black;
      border-radius: 10px;
    }
    .login form select{
      width: 100%;
      height: 50px;
      background: none;
      border: 1px solid black;
      border-radius: 10px;
    }
    .login form button{
      width: 100%;
      padding: 15px;
      margin-top: 20px;
      border: 0;
      cursor: pointer;
      font-weight: bold;
    }
  </style>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
  <div class="container-fluid ">
    <div class="row">
        <div class="col">
            <%- layout('layouts/main') %>
        </div>
    </div>
    <div class="row">
      <div class="col">
        <% if (!user.admin) { %>
            <h1>No found page!!</h1>
        <% } else { %>
            <div class="login">
                <h1>Nuevo Usuario</h1>
                <br>
                <form action="/new" method="POST">
                  <!--  usuario -->
                  <div class="row  align-items-center">
                      <div class="col-auto">
                          <label for="username"><i class="fas fa-user"></i></label>
                      </div>
                      <div class="col">
                          <input type="username" name="username" id="username" placeholder="Username" class="form-control">
                      </div>
                  </div>
                  <br>
                  
                  <!--  email -->
                  <div class="row  align-items-center">
                      <div class="col-auto">
                          <label for="email">
                              <i class="fas fa-envelope"></i>
                          </label>
                      </div>
                      <div class="col">
                          <input type="email" id="email" name="email" placeholder="Email">
                      </div>
                  </div>
                  <br>
                  <!--Permisos-->
                  <div class="row  align-items-center">
                      <div class="col-auto">
                          <label for="role">
                              <i class="fa-solid fa-user-gear"></i>
                          </label>
                      </div>
                      <div class="col">
                          <select class="form-select" aria-label="Default select example" id="role" name="role">
                              <option selected value="false">Seleccione el rol del usuario</option>
                              <option value="true">Administrador</option>
                              <option value="false">Usuario</option>
                            </select>
                      </div>
                  </div>
                  <br>  
      
                  <!--  Constraseña verif -->
                  <div class="row  align-items-center">
                      <div class="col-auto">
                          <label for="date">
                              <i class="fas fa-lock"></i>
                          </label>
                      </div>
                      <div class="col">
                          <input type="password" id="pass" name="pass" placeholder="Password">
                      </div>
                  </div>
                  <br>
      
                  <!-- Contraseña -->
                  <div class="row  align-items-center">
                      <div class="col-auto">
                          <label for="password">
                              <i class="fas fa-lock"></i>
                          </label>
                      </div>
                      <div class="col">
                          <input type="password" id="password" name="password" placeholder="Confirm Password">
                      </div>
                  </div>
                  <br>
      
                  <button type="submit" class="btn btn-outline-primary">Crear</button>    
                </form>
              </div>
              <a type="button" class="btn btn-outline-dark" href="/table"> 
                <i class="fa-solid fa-clipboard-list"></i>
                Listado de Usuarios
            </a>
        <% } %>

      </div>
    </div>
  </div>
  
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>